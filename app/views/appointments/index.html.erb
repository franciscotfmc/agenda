<% provide(:title, 'All Appointments') %>

<h1>My Appointments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th>Due Time</th>
    </tr>
  </thead>
  <% @appointments.each do |user| %>
    <%= render @appointments %>
  <% end %>
</table>

<% if @appointments.count == 0 %>
  <h2>No appointments...</h2>
<% end %>